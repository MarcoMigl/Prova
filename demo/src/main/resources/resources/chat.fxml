<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="appolloni.migliano.gui.GUIChat">

    <top>
        <VBox spacing="0">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc; -fx-border-width: 0 0 1 0;">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <children>
                    <Button onAction="#tornaIndietro" text="&lt; Indietro" style="-fx-cursor: hand;"/>
                    <Label fx:id="lbNomeGruppo" text="Nome Gruppo" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                <padding><Insets bottom="8" left="15" right="15" top="8" /></padding>
                <children>
                    
                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <children>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="Materia:" textFill="#777" style="-fx-font-size: 11px;"/>
                                <Label fx:id="lbMateria" text="-" style="-fx-font-weight: bold;"/>
                            </HBox>

                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="CittÃ :" textFill="#777" style="-fx-font-size: 11px;"/>
                                <Label fx:id="lbCitta" text="-" style="-fx-font-weight: bold;"/>
                            </HBox>

                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="Luogo:" textFill="#777" style="-fx-font-size: 11px;"/>
                                <Label fx:id="lbLuogo" text="-" style="-fx-font-weight: bold;"/>
                            </HBox>
                        </children>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS" />

                    <Button onAction="#clickAbbandona" text="Abbandona Gruppo" 
                            style="-fx-background-color: #ffebee; -fx-text-fill: #d32f2f; -fx-font-size: 11px; -fx-border-color: #ffcdd2; -fx-border-radius: 3; -fx-cursor: hand;"/>
                </children>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="5" style="-fx-background-color: #e5ddd5;"> <padding><Insets bottom="5" left="5" right="5" top="5" /></padding>
            <children>
                <ListView fx:id="listaMessaggi" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" />
                <Label fx:id="lbInvio" text="" textFill="red" />
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <children>
                <TextField fx:id="txtMessaggio" promptText="Scrivi un messaggio..." style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />
                <Button defaultButton="true" onAction="#inviaMessaggio" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Invia" /> 
            </children>
        </HBox>
    </bottom>

</BorderPane>